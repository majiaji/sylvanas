<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd"
       default-autowire="byName">
    <!-- 主配置文件 -->

    <!-- biz层注解驱动 -->
    <context:component-scan base-package="com.fantasy.sylvanas.service"/>
    <!--spring placeholder -->
    <context:property-placeholder location="classpath:config.properties"/>

    <bean id="myPipe" class="com.fantasy.sylvanas.service.pipeline.PipeLine" init-method="init">
        <property name="pipeList">
            <list>
                <bean class="com.fantasy.sylvanas.service.pipeline.pipe.StartWatchPipe"/>
                <bean class="com.fantasy.sylvanas.service.pipeline.pipe.AsyncPipeExample"/>
                <bean class="com.fantasy.sylvanas.service.pipeline.pipe.SleepPipe"/>
            </list>
        </property>
    </bean>
</beans>
